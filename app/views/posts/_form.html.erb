<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header titulo">New Post</div>

                <div class="card-body">

                <%= form_with(model: post) do |form| %>
                  <% if post.errors.any? %>
                    <div id="error_explanation">
                      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

                      <ul>
                        <% post.errors.each do |error| %>
                          <li><%= error.full_message %></li>
                        <% end %>
                      </ul>
                    </div>
                  <% end %>

                  <div class="field">
                    <%= form.hidden_field :user_id, :value => current_user.id %>
                  </div>

                  <div class="field">
                    <%= form.label :text %>
                    <%= form.text_area :text %>
                  </div>

                  <div class="field">
                    <%= form.label :media %>
                    <%= form.text_field :media %>
                  </div>

                  <div class="actions">
                    <%= form.submit %>
                  </div>
                <% end %>
                
                </div>
            </div>
        </div>
    </div>
</div>
